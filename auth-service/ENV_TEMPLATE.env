# ============================================================================
# Auth Service - Environment Variables Template
# ============================================================================
# Copy these variables to your Tomcat setenv.sh/setenv.bat or IntelliJ IDEA
# run configuration. All variables are prefixed with entity name for
# multi-app Tomcat deployment support.
# ============================================================================

# ============================================================================
# Spring Profile (REQUIRED)
# ============================================================================
SPRING_PROFILES_ACTIVE=prod

# ============================================================================
# Server Configuration
# ============================================================================
TEMP_AUTH_SERVICE_SERVER_PORT=8091
TEMP_AUTH_SERVICE_CONTEXT_PATH=/auth

# ============================================================================
# Database Configuration - Oracle (REQUIRED for prod)
# ============================================================================
TEMP_AUTH_SERVICE_DB_HOST=localhost
TEMP_AUTH_SERVICE_DB_PORT=1521
TEMP_AUTH_SERVICE_DB_SID=ORCL
TEMP_AUTH_SERVICE_DB_USERNAME=your_username
TEMP_AUTH_SERVICE_DB_PASSWORD=your_password

# ============================================================================
# Connection Pool Configuration (Hikari)
# ============================================================================
TEMP_AUTH_SERVICE_HIKARI_MAX_POOL=10
TEMP_AUTH_SERVICE_HIKARI_MIN_IDLE=5
TEMP_AUTH_SERVICE_HIKARI_CONN_TIMEOUT=30000
TEMP_AUTH_SERVICE_HIKARI_IDLE_TIMEOUT=600000
TEMP_AUTH_SERVICE_HIKARI_MAX_LIFETIME=1800000

# ============================================================================
# JPA/Hibernate Configuration
# ============================================================================
TEMP_AUTH_SERVICE_JPA_DIALECT=org.hibernate.dialect.OracleDialect
TEMP_AUTH_SERVICE_JPA_DDL_AUTO=validate
TEMP_AUTH_SERVICE_JPA_SHOW_SQL=false
TEMP_AUTH_SERVICE_JPA_FORMAT_SQL=false
TEMP_AUTH_SERVICE_JPA_SQL_COMMENTS=false

# ============================================================================
# H2 Console (disable in production)
# ============================================================================
TEMP_AUTH_SERVICE_H2_CONSOLE_ENABLED=false

# ============================================================================
# JWT Configuration (REQUIRED)
# ============================================================================
# CRITICAL: Generate a strong secret for production!
# Generate with: openssl rand -hex 32
TEMP_AUTH_SERVICE_JWT_SECRET=your_jwt_secret_here
TEMP_AUTH_SERVICE_JWT_ACCESS_EXPIRATION=900000
TEMP_AUTH_SERVICE_JWT_REFRESH_EXPIRATION=86400000

# ============================================================================
# Session Management
# ============================================================================
TEMP_AUTH_SERVICE_SESSION_MAX_PER_USER=5

# ============================================================================
# LDAP Configuration (Optional)
# ============================================================================
TEMP_AUTH_SERVICE_LDAP_ENABLED=false
TEMP_AUTH_SERVICE_LDAP_URL=ldaps://ldap.example.com:636
TEMP_AUTH_SERVICE_LDAP_BASE=example.local
TEMP_AUTH_SERVICE_LDAP_USER_SEARCH_FILTER=(&(objectClass=user)(sAMAccountName={1}))

# ============================================================================
# CORS Configuration
# ============================================================================
TEMP_AUTH_SERVICE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Application Logging
# ============================================================================
TEMP_AUTH_SERVICE_LOGGING_ENTITY_NAME=TEMP_AUTH_SERVICE
TEMP_AUTH_SERVICE_LOGGING_CREATE_USER=auth-service
TEMP_AUTH_SERVICE_LOGGING_DB_ENABLED=true
