# ============================================================================
# Business App Backend - Environment Variables Template
# ============================================================================
# Copy these variables to your Tomcat setenv.sh/setenv.bat or IntelliJ IDEA
# run configuration. All variables are prefixed with entity name for
# multi-app Tomcat deployment support.
# ============================================================================

# ============================================================================
# Spring Profile (REQUIRED)
# ============================================================================
SPRING_PROFILES_ACTIVE=prod

# ============================================================================
# Server Configuration
# ============================================================================
TEMP_BUSINESS_APP_SERVER_PORT=8090
TEMP_BUSINESS_APP_CONTEXT_PATH=/api

# ============================================================================
# Database Configuration - Oracle (REQUIRED for prod)
# ============================================================================
TEMP_BUSINESS_APP_DB_HOST=localhost
TEMP_BUSINESS_APP_DB_PORT=1521
TEMP_BUSINESS_APP_DB_SID=ORCL
TEMP_BUSINESS_APP_DB_USERNAME=your_username
TEMP_BUSINESS_APP_DB_PASSWORD=your_password

# ============================================================================
# Connection Pool Configuration (Hikari)
# ============================================================================
TEMP_BUSINESS_APP_HIKARI_MAX_POOL=10
TEMP_BUSINESS_APP_HIKARI_MIN_IDLE=5
TEMP_BUSINESS_APP_HIKARI_CONN_TIMEOUT=30000
TEMP_BUSINESS_APP_HIKARI_IDLE_TIMEOUT=600000
TEMP_BUSINESS_APP_HIKARI_MAX_LIFETIME=1800000

# ============================================================================
# JPA/Hibernate Configuration
# ============================================================================
TEMP_BUSINESS_APP_JPA_DIALECT=org.hibernate.dialect.OracleDialect
TEMP_BUSINESS_APP_JPA_DDL_AUTO=validate
TEMP_BUSINESS_APP_JPA_SHOW_SQL=false
TEMP_BUSINESS_APP_JPA_FORMAT_SQL=false
TEMP_BUSINESS_APP_JPA_SQL_COMMENTS=false

# ============================================================================
# H2 Console (disable in production)
# ============================================================================
TEMP_BUSINESS_APP_H2_CONSOLE_ENABLED=false

# ============================================================================
# JWT Configuration (REQUIRED)
# ============================================================================
# CRITICAL: Must match auth-service JWT secret!
# Generate with: openssl rand -hex 32
TEMP_BUSINESS_APP_JWT_SECRET=your_jwt_secret_here
TEMP_BUSINESS_APP_JWT_EXPIRATION=900000

# ============================================================================
# Auth Service Configuration (REQUIRED)
# ============================================================================
TEMP_BUSINESS_APP_AUTH_SERVICE_HOST=http://localhost:8091/auth

# ============================================================================
# CORS Configuration
# ============================================================================
TEMP_BUSINESS_APP_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Application Logging
# ============================================================================
TEMP_BUSINESS_APP_LOGGING_ENTITY_NAME=TEMP_BUSINESS_APP
TEMP_BUSINESS_APP_LOGGING_CREATE_USER=business-app-backend
TEMP_BUSINESS_APP_LOGGING_ENABLED=true
